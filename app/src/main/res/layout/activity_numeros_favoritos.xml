<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luizhenrique.numerosloteria.Activities.NumerosFavoritos">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_favoritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryDarkColor"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/AppTheme.ActionBar"
        app:title="Gerador de Números"
        app:titleTextColor="@android:color/background_light"
        android:layoutMode="opticalBounds"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_adc_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/plus3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_favoritos"
        android:orientation="vertical"
        android:id="@+id/linearFavoritos">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Números"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/numerosSelecionados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="211dp"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/gridNumerosFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:columnCount="6"
            android:textAlignment="center"></GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearFavoritos"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGerarNumeros"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Gerar Números" />

    </LinearLayout>

</RelativeLayout>

